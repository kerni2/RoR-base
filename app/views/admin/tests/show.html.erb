<div class="row justify-content-center mt-3">

  <h2><%= t('.header') %></h2>

  <p>
    <strong><%= t('.title') %></strong>
    <%= @test.title %>
  </p>

  <p>
    <strong><%= t('.level') %></strong>
    <%= @test.level %>
  </p>

  <p>
    <strong><%= t('.visible') %></strong>
    <%= @test.visible %>
  </p> 

  <p>
    <strong><%= t('.timer') %></strong>
    <%= @test.timing %>
  </p>   

  <div class="card border-primary">

    <table class="table">
      <tr>
        <th scope="col"><%= t('.question') %></th>
        <th scope="col" colspan='3'><%= t('.actions') %></th>
      <tr/>

      <%= render @test.questions %>
    </table>

  </div>

</div>

<p><%= link_to t('.new_question'), new_admin_test_question_path(@test) %></p>
<p><%= link_to t('.edit'), edit_admin_test_path(@test) %></p>
<p><%= link_to t('.back_test'), admin_tests_path %></p>
