
<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/errors', resource: @user %>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </p><br>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </p><br>

  <p>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p><br>

    <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :user_name  %>
  </p><br>


  <p>
    <%= form.label :group %><br>
    <%= form.text_field :group, id: :user_group  %>
  </p><br>  

  <%= form.submit %><br>
<% end %><br>
